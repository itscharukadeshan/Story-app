<h1>Dashboard</h1>

<h3>Welcome {{name}}</h3>
<p>Here are your stories</p>

{{#if stories}}

  <table class="striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      {{#each stories}}
        <tr>
          <td><a href="stories/{{_id}}">{{title}}</a></td>
          <td>{{formatDate createdAt "MMMM Do YYYY, h:mm:ss a"}}</td>
          <td><span class="dash-status">{{status}}</span></td>
        </tr>

      {{/each}}
    </tbody>
  </table>

{{else}}
  <p>you don't have any stories</p>
{{/if}}